<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Text_Color_White_GradeFour" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Color_White</item>
        <item name="android:textSize">@dimen/TextView_TextSize_GradeFour</item>
    </style>

    <style name="Text_Color_GrayDeep_GradeFour" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Color_Gray_Deep</item>
        <item name="android:textSize">@dimen/TextView_TextSize_GradeFour</item>
    </style>

    <style name="Text_Black_GradeThree" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Color_Black</item>
        <item name="android:textSize">@dimen/TextView_TextSize_GradeThree</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rectangle_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Text_Color_White_GradeOne" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Color_White</item>
        <item name="android:textSize">@dimen/TextView_TextSize_GradeOne</item>
    </style>

    <style name="Play_CheckBox">
        <item name="android:button">@drawable/play_checkbox_selector</item>
    </style>

</resources>