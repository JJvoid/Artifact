<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/CreateDate_TextView"
        style="@style/Text_Color_White_GradeFour"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_grey_shallow"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreateDate_TextView"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

     <com.thinkrace.NewApplication.Uti.CircularImage
            android:id="@+id/Head_ImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/app_defult_headimage" />

        <TextView
            android:id="@+id/NickName_TextView"
            style="@style/Text_Color_GrayDeep_GradeFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/Head_ImageView"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/Message_TextView"
            style="@style/Text_Black_GradeThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/Head_ImageView"
            android:layout_below="@+id/NickName_TextView"
            android:background="@drawable/message_background"/>
    </RelativeLayout>
    

</RelativeLayout>
